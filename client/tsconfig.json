{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext", // можно использовать esnext для поддержки современных модулей
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/**/*",
    "client/**/*",
    "api/**/*",
    "global.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
